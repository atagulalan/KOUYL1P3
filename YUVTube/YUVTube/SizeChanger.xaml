<Window x:Class="YUVTube.SizeChanger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YUVTube"
        mc:Ignorable="d"
        Title="Custom Size" Height="140" Width="156.333" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button" Content="OK" Margin="10,68,12,12" Click="Button_Click"/>
        <TextBox PreviewTextInput="OnlyNumbers" x:Name="w" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Margin="53,10,12,0" VerticalContentAlignment="Center"/>
        <Label x:Name="label" Content="Width:" Margin="10,10,0,0" VerticalAlignment="Top" Height="24" VerticalContentAlignment="Center" Padding="0" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Width="38"/>
        <TextBox PreviewTextInput="OnlyNumbers" x:Name="h" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Margin="53,39,12,0" VerticalContentAlignment="Center"/>
        <Label x:Name="label_Copy" Content="Height:" Margin="10,39,0,0" VerticalAlignment="Top" Height="24" VerticalContentAlignment="Center" Padding="0" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Width="38"/>

    </Grid>
</Window>
